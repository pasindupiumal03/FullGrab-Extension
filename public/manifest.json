{
  "name": "FullGrab - Screenshot & Full Page Capture",
  "version": "1.0.1",
  "description": "Capture visible area and full-page screenshots. Download as PNG or PDF. Share instantly with generated links.",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "FullGrab"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "64": "64.png",
    "128": "128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage",
    "offscreen",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "auth-callback.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
